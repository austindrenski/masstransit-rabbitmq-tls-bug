root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[.editorconfig]
editorconfig_align_group_field_declarations = false
editorconfig_space_after_colon = false
editorconfig_space_after_comma = true
editorconfig_space_before_colon = false
editorconfig_space_before_comma = false
editorconfig_spaces_around_assignment_operators = true

[*.cs]
file_header_template = unset
max_line_length = 180
# language
csharp_indent_switch_labels = false
csharp_int_align_switch_expressions = true
csharp_int_align_switch_sections = true
csharp_keep_blank_lines_in_code = 1
csharp_keep_blank_lines_in_declarations = 1
csharp_keep_existing_initializer_arrangement = true
csharp_place_accessorholder_attribute_on_same_line = never
csharp_place_field_attribute_on_same_line = always
csharp_prefer_braces = when_multiline
csharp_prefer_simple_using_statement = true
csharp_prefer_static_local_function = true
csharp_preferred_modifier_order = public, private, protected, internal, file, new, static, extern, virtual, abstract, sealed, override, readonly, unsafe, required, volatile, async
csharp_space_after_cast = false
csharp_space_within_empty_braces = false
csharp_space_within_single_line_array_initializer_braces = true
csharp_style_conditional_delegate_call = true
csharp_style_expression_bodied_accessors = when_on_single_line
csharp_style_expression_bodied_constructors = when_on_single_line
csharp_style_expression_bodied_indexers = when_on_single_line
csharp_style_expression_bodied_lambdas = when_on_single_line
csharp_style_expression_bodied_local_functions = when_on_single_line
csharp_style_expression_bodied_methods = when_on_single_line
csharp_style_expression_bodied_operators = when_on_single_line
csharp_style_expression_bodied_properties = when_on_single_line
csharp_style_namespace_declarations = file_scoped
csharp_style_pattern_matching_over_as_with_null_check = true
csharp_style_pattern_matching_over_is_with_cast_check = true
csharp_style_prefer_not_pattern = true
csharp_style_prefer_pattern_matching = true
csharp_style_prefer_switch_expression = true
csharp_style_throw_expression = true
csharp_style_unused_value_expression_statement_preference = discard_variable
csharp_style_var_elsewhere = true
csharp_style_var_for_built_in_types = true
csharp_style_var_when_type_is_apparent = true
csharp_using_directive_placement = outside_namespace
dotnet_remove_unnecessary_suppression_exclusions = true
dotnet_separate_import_directive_groups = false
dotnet_sort_system_directives_first = true
dotnet_style_coalesce_expression = true
dotnet_style_namespace_match_folder = true
dotnet_style_null_propagation = true
dotnet_style_parentheses_in_arithmetic_binary_operators = never_if_unnecessary
dotnet_style_parentheses_in_other_binary_operators = never_if_unnecessary
dotnet_style_parentheses_in_other_operators = never_if_unnecessary
dotnet_style_parentheses_in_relational_binary_operators = never_if_unnecessary
dotnet_style_predefined_type_for_locals_parameters_members = true
dotnet_style_prefer_conditional_expression_over_return = true
dotnet_style_prefer_is_null_check_over_reference_equality_method = true
dotnet_style_qualification_for_field = false
dotnet_style_qualification_for_property = false
dotnet_style_readonly_field = true
dotnet_style_require_accessibility_modifiers = omit_if_default
# naming
dotnet_naming_rule.static_readonly_fields.severity = suggestion
dotnet_naming_rule.static_readonly_fields.style = static_readonly_fields
dotnet_naming_rule.static_readonly_fields.symbols = static_readonly_fields
dotnet_naming_symbols.static_readonly_fields.applicable_accessibilities = *
dotnet_naming_symbols.static_readonly_fields.applicable_kinds = field
dotnet_naming_symbols.static_readonly_fields.required_modifiers = static, readonly
dotnet_naming_style.static_readonly_fields.capitalization = pascal_case

[*.{config,csproj,props,targets}]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
